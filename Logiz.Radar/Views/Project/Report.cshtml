@model TestReportProjectViewModel
@{
    ViewData["Title"] = "Report";
}

<h1>Report</h1>
<h4>@Model.ProjectName</h4>
<br />
<div>
    <h5>Project summary</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Total
                </th>
                <th>
                    Passed
                </th>
                <th>
                    Canceled
                </th>
                <th>
                    Failed
                </th>
                <th>
                    Open
                </th>
                <th>
                    Pending
                </th>
                <th>
                    Hold
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @if (Model.StartDate.HasValue)
                    {
                        <text>
                            @Model.StartDate.Value.ToString("yyyy/MM/dd")
                        </text>
                    }
                </td>
                <td>
                    @if (Model.EndDate.HasValue)
                    {
                        <text>
                            @Model.EndDate.Value.ToString("yyyy/MM/dd")
                        </text>
                    }
                </td>
                <td>
                    @Model.Total
                </td>
                <td>
                    @Model.Passed
                </td>
                <td>
                    @Model.Canceled
                </td>
                <td>
                    @Model.Failed
                </td>
                <td>
                    @Model.Open
                </td>
                <td>
                    @Model.Pending
                </td>
                <td>
                    @Model.Hold
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    @Model.PassedPercentage%
                </td>
                <td>
                    @Model.CanceledPercentage%
                </td>
                <td>
                    @Model.FailedPercentage%
                </td>
                <td>
                    @Model.OpenPercentage%
                </td>
                <td>
                    @Model.PendingPercentage%
                </td>
                <td>
                    @Model.HoldPercentage%
                </td>
            </tr>
        </tbody>
    </table>
</div>
<br />
<div>
    <h5>Test Report by Scenario</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Scenario
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Total
                </th>
                <th>
                    Passed
                </th>
                <th>
                    Canceled
                </th>
                <th>
                    Failed
                </th>
                <th>
                    Open
                </th>
                <th>
                    Pending
                </th>
                <th>
                    Hold
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ReportByScenario)
            {
                <tr>
                    <td>
                        @if (item.StartDate <= DateTime.Today && DateTime.Today <= item.EndDate)
                        {
                            <b>
                                @item.ScenarioName
                            </b>
                        }
                        else
                        {
                            @item.ScenarioName
                        }
                    </td>
                    <td>
                        @if (item.StartDate.HasValue)
                        {
                            <text>
                                @item.StartDate.Value.ToString("yyyy/MM/dd")
                            </text>
                        }
                    </td>
                    <td>
                        @if (item.EndDate.HasValue)
                        {
                            <text>
                                @item.EndDate.Value.ToString("yyyy/MM/dd")
                            </text>
                        }
                    </td>
                    <td>
                        @item.Total
                    </td>
                    <td>
                        @item.Passed
                    </td>
                    <td>
                        @item.Canceled
                    </td>
                    <td>
                        @item.Failed
                    </td>
                    <td>
                        @item.Open
                    </td>
                    <td>
                        @item.Pending
                    </td>
                    <td>
                        @item.Hold
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <h5>Test Report by Planned Date</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Planned Date
                </th>
                <th>
                    Total
                </th>
                <th>
                    Workload
                </th>
                <th>
                    Passed
                </th>
                <th>
                    Canceled
                </th>
                <th>
                    Failed
                </th>
                <th>
                    Open
                </th>
                <th>
                    Pending
                </th>
                <th>
                    Hold
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ReportByPlannedDate)
            {
                <tr>
                    <td>
                        @if (item.PlannedDate.Date == DateTime.Today)
                        {
                            <b>
                                @item.PlannedDate.ToString("yyyy/MM/dd")
                            </b>
                        }
                        else
                        {
                            @item.PlannedDate.ToString("yyyy/MM/dd")
                        }
                    </td>
                    <td>
                        @item.Total
                    </td>
                    <td>
                        @item.WorkloadPercentage%
                    </td>
                    <td>
                        @item.Passed
                    </td>
                    <td>
                        @item.Canceled
                    </td>
                    <td>
                        @item.Failed
                    </td>
                    <td>
                        @item.Open
                    </td>
                    <td>
                        @item.Pending
                    </td>
                    <td>
                        @item.Hold
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <h5>Test Report by Planned Date Accumulation</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Planned Date
                </th>
                <th>
                    Total
                </th>
                <th>
                    Workload
                </th>
                <th>
                    Passed
                </th>
                <th>
                    Canceled
                </th>
                <th>
                    Failed
                </th>
                <th>
                    Open
                </th>
                <th>
                    Pending
                </th>
                <th>
                    Hold
                </th>
            </tr>
        </thead>
        <tbody>
